mixin articles
  table.main_table(width="100%" border="0" cellpadding="0" cellspacing="0" align="center")
    tr
      td
        mixin separator
    tr
      td
        mixin sectionTitle("Top Articles")
    tr
      td
        each article in articles
          table.full_width(width="600" border="0" cellpadding="0" cellspacing="0" align="center")
            - if(article.big)
              tr
                td.double_padding_top
                  img.full_width(src="/#{name}/images/#{article.image}")
              tr
                td.single_padding_top.double_padding_bottom(valign="top")
                  mixin article_content(article)
            - if(!article.big)
              tr
                td.double_padding(valign="top")
                  mixin article_content(article)
                td.double_padding.third_width(width="220" align="right" valign="top")
                  img.full_width(src="/#{name}/images/#{article.image}")
          mixin separator
