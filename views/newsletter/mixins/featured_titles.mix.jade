mixin featured_titles
  table.main_table(width="100%" border="0" cellpadding="0" cellspacing="0" align="center")
    tr
      td
        mixin sectionTitle("Featured titles")
    tr
      td
        table.full_width(width="600" border="0" cellpadding="0" cellspacing="0" align="center")
          tr
            td
              each featured_title in featured_titles
                table.half_width(width="24%" border="0" cellpadding="0" cellspacing="0" align="left")
                  tr
                    td(width="50%") &nbsp;
                    td
                      img(src="#{featured_title.image}" height="160")
                    td(width="50%") &nbsp;
                  tr
                    td &nbsp;
                    td
                      p.book-title= featured_title.title
                    td &nbsp;
                  tr
                    td &nbsp;
                    td
                      p.book-type= featured_title.type
                    td &nbsp;
          tr
            td.double_padding
              mixin button("SEE MORE TITLES", "#")
        mixin separator