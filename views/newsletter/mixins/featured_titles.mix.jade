mixin featured_titles(content)
  table.main_table(width="100%" border="0" cellpadding="0" cellspacing="0" align="center")
    tr
      td
        mixin sectionTitle(content.title)
    tr
      td
        table.full_width(width="600" border="0" cellpadding="0" cellspacing="0" align="center")
          tr
            td
              each featured_title in content.items
                a(href="#{featured_title.url}")
                  table.half_width(width="25%" border="0" cellpadding="0" cellspacing="0" align="left")
                    tr
                      td(width="50%") &nbsp;
                      td
                        img(src="#{featured_title.image}" height="160")
                      td(width="50%") &nbsp;
                    tr
                      td &nbsp;
                      td
                        p.book-title= featured_title.title
                      td &nbsp;
                    tr
                      td &nbsp;
                      td
                        p.book-type= featured_title.subtitle
                      td &nbsp;
          tr
            td.double_padding
              mixin button(content.cta)
        mixin separator