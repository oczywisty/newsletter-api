mixin person(content, single)
  if content.enabled
    - width = single ? 290 : 600
    table.half_width(align="left" width="#{width}" height="130")
      tr
        td(align="center" height="85")
          img(src="#{content.image}")
      tr
        td(align="center")
          span.hero_name= content.name
      tr
        td(align="center")
          span.hero_subtitle= content.subtitle